<AnchorPane fx:id="mainPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainController">
   <ImageView fx:id="iconDeck" fitHeight="120.0" fitWidth="80.0" layoutX="730.0" layoutY="353.0" pickOnBounds="true" preserveRatio="true" />
   <ImageView fx:id="iconLastCard" fitHeight="120.0" fitWidth="80.0" layoutX="419.0" layoutY="349.0" pickOnBounds="true" preserveRatio="true" />
   <Label fx:id="labelCurrentPlayer" alignment="CENTER" contentDisplay="CENTER" layoutX="460.0" layoutY="550.0" prefHeight="31.0" prefWidth="286.0" text="labelCurrentPlayer" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="19.0" />
      </font>
   </Label>
   <Circle fx:id="circleWishColor" fill="DODGERBLUE" layoutX="595.0" layoutY="410.0" radius="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
   <Label fx:id="labelWishColor" layoutX="565.0" layoutY="360.0" text="Chosen color">
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
   </Label>
   <ImageView fx:id="imageViewWishColor" fitHeight="50.0" fitWidth="50.0" layoutX="585.0" layoutY="395.0" pickOnBounds="true" preserveRatio="true" />
   <HBox fx:id="hboxInfo" alignment="CENTER" layoutX="340.0" layoutY="761.0" prefHeight="45.0" prefWidth="542.0">
      <Label fx:id="labelInfo" alignment="CENTER" contentDisplay="CENTER" prefHeight="29.0" prefWidth="433.0" text="DisplayInfo" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="buttonInfo" mnemonicParsing="false" text="OK">
         <HBox.margin>
            <Insets left="15.0" />
         </HBox.margin>
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </HBox>
   <Label fx:id="labelChallengeCounter" alignment="CENTER" contentDisplay="CENTER" layoutX="450.0" layoutY="500.0" prefHeight="27.0" prefWidth="306.0" text="Loser draws 12 card" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <ImageView fx:id="imageViewDirection" fitHeight="40.0" fitWidth="40.0" layoutX="580.0" layoutY="277.0" pickOnBounds="true" preserveRatio="true" />
   <Label fx:id="labelDirection" layoutX="563.0" layoutY="247.0" text="Direction of play:">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
   </Label>
   <Label fx:id="labelAI2Name" alignment="CENTER" contentDisplay="CENTER" layoutX="1030.0" layoutY="115.0" prefHeight="19.0" prefWidth="106.0" text="Computer 2" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </Label>
   <Label fx:id="labelAI3Name" alignment="CENTER" contentDisplay="CENTER" layoutX="60.0" layoutY="115.0" prefHeight="19.0" prefWidth="106.0" text="Computer 3" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </Label>
   <Label fx:id="labelAI1Name" alignment="CENTER" contentDisplay="CENTER" layoutX="560.0" layoutY="38.0" prefHeight="19.0" prefWidth="106.0" text="Computer 1" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </Label>
   <Button fx:id="buttonStart" layoutX="575.0" layoutY="520.0" mnemonicParsing="false" text="START">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Button>
   <MenuBar fx:id="menuBar" layoutX="24.0" layoutY="-3.0" prefHeight="25.0" prefWidth="304.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <Menu fx:id="menu1" mnemonicParsing="false" text="Menu">
         <MenuItem fx:id="menuItemBack" mnemonicParsing="false" onAction="#showMainMenu" text="Back to start" />
         <MenuItem fx:id="menuItem3" mnemonicParsing="false" onAction="#about" text="Information" />
      </Menu>
   </MenuBar>
   <Pane fx:id="paneContainsBox" layoutX="150.0" layoutY="178.0" prefHeight="409.0" prefWidth="896.0">
      <VBox layoutX="630.0" layoutY="26.0" spacing="25.0">
         <Button fx:id="buttonOffline" mnemonicParsing="false" onAction="#startGame" prefHeight="50.0"
                 prefWidth="130.0" text="Offline">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
         <Button fx:id="btOnline" mnemonicParsing="false" prefHeight="50.0" prefWidth="130.0" text="Online"/>
         <Button fx:id="btnLeaderBoard" mnemonicParsing="false" onAction="#changeToLeaderBoard" prefHeight="50.0"
                 prefWidth="130.0" text="LeaderBoard">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
         <Button fx:id="buttonSettings" mnemonicParsing="false" onAction="#openSettings" prefHeight="50.0"
                 prefWidth="130.0" text="Setting">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
         <Button fx:id="buttonQuit" onAction="#quit" mnemonicParsing="false" prefHeight="50.0" prefWidth="130.0" text="Quit"/>
      </VBox>
   </Pane>
   <Pane fx:id="leaderBoardPane1" layoutX="250.0" layoutY="100.0" prefHeight="438.0" prefWidth="677.0">
      <Button fx:id="backButton1" layoutX="285.0" layoutY="390.0" mnemonicParsing="false"
              onAction="#backFromLeaderBoard" prefHeight="32.0" prefWidth="106.0" text="Back"/>
      <TextArea fx:id="textLeaderBoard" layoutX="63.0" layoutY="65.0" prefHeight="283.0" prefWidth="570.0"
                text="This is testing"/>
      <Label fx:id="labelLeaderBoard" alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="-6.0"
             prefHeight="31.0" prefWidth="669.0" text="Leaderboard">
         <font>
            <Font size="26.0"/>
         </font>
      </Label>
   </Pane>
   <Pane fx:id="paneContainsSetNameScene" layoutX="252.0" layoutY="215.0" prefHeight="396.0" prefWidth="669.0">
      <TextField fx:id="textGetName" layoutX="313.0" layoutY="165.0" prefHeight="43.0" prefWidth="196.0"/>
      <Label fx:id="labelSetName" layoutX="107.0" layoutY="169.0" text="Your name">
         <font>
            <Font size="24.0"/>
         </font>
      </Label>
      <Group fx:id="paneContainsSetName"/>
      <Button fx:id="btSetName" layoutX="300.0" layoutY="334.0" mnemonicParsing="false" prefHeight="50.0"
              prefWidth="120.0" text="SET NAME"/>
   </Pane>

</AnchorPane>
